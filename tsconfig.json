{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,        
    "noEmitOnError": false,   
    "types": ["node"]      
  },
  "include": ["src/**/*"],         
  "exclude": ["node_modules", "drizzle", "**/*.test.ts"]
}
